# Backend Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to GitHub!

# Hugging Face Configuration (Required)
# Get your token from: https://huggingface.co/settings/tokens
HF_API_TOKEN=hf_YOUR_TOKEN_HERE

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=False  # Set to False for production

# CORS Configuration
# For local development: http://localhost:5173 or http://localhost:5174
# For production (Vercel): https://your-app.vercel.app
FRONTEND_URL=https://your-app.vercel.app

# Model Configuration
PHISHING_DETECTION_MODEL=phishing-model-2024-1
SPAM_DETECTION_MODEL=shahrukhx01/bert-mini-finetune-question-detection
DEEPFAKE_MODEL=prithivMLmods/deepfake-detector-model-v1

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60

# File Upload Limits (in MB)
MAX_TEXT_SIZE_MB=1
MAX_DOCUMENT_SIZE_MB=10
MAX_AUDIO_SIZE_MB=50
